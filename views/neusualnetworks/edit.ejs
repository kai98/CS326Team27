<% include ../partials/header %>
<div class="container">
    <div class="row">    
        <h1 style="text-align:center;"> 
            Edit <%= neusualnetwork.name %> Info
        </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/neusualhome/<%= neusualnetwork._id %>?_method=PUT" method="POST">
                <div class="formgroup">
                    <input type="text" class="form-control" name="neusualnetwork[name]" value="<%= neusualnetwork.name %>" width="50%"><br>
                </div>
