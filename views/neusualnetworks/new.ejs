<% include ../partials/header %>
<div class="container">
    <div class="row">    
        <h1 style="text-align:center;"> 
            Create new model
        </h1>
        <div style="width: 30%; margin: 25px auto;">
<!--            <form action="/neusualhome" method="post">-->
            <form action="/playground">

                <div class="formgroup">
                    <input type="text" class="form-control" name="addnew" placeholder="Add new neusualnetwork" width="50%"><br>
                </div>
                <div class="formgroup">
                    <input type="number" class="form-control" name="price" placeholder="price" min="0.01" step="0.01" width="50%"><br>
                </div>
                <div class="formgroup">
                    <input type="text" class="form-control" name="image" placeholder="http://playground.tensorflow.org/preview.png" width="50%"><br>
                </div>
                 <div class="formgroup">
                    <input type="text" class="form-control" name="description" placeholder="description" width="50%"><br>
                </div>
                <div class="formgroup">
                    <button class="btn btn-lg btn-primary btn-block">Start Training</button><br>
                </div>
            </form>
            <a href="/neusualhome">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>